<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Moodify.Views.UpdateFoodItemPage">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="1*" />
      <RowDefinition Height="1*" />
      <RowDefinition Height="1*" />
      <RowDefinition Height="1*" />
      <RowDefinition Height="1*" />
      <RowDefinition Height="1*" />
      <RowDefinition Height="4*" />
      <RowDefinition Height="2*" />
    </Grid.RowDefinitions>
    <Label Grid.Row="0" TextColor="#58c0fc" FontSize="30" Text="Enter Item Name"  />
    <Entry Grid.Row="1" x:Name="nameInput" Placeholder="Item Name" TextColor="Pink"/>
    <Label Grid.Row="2" TextColor="#58c0fc" FontSize="30" Text="Enter Item Price"  />
    <Entry Grid.Row="3" x:Name="priceInput" Placeholder="Price" TextColor="Pink"/>
    <Label Grid.Row="4" TextColor="#58c0fc" FontSize="30" Text="Enter a Mood to register to"  />
    <Entry Grid.Row="5" x:Name="moodInput" Placeholder="Mood" TextColor="Pink"/>
    <Button Grid.Row="6" VerticalOptions="Fill" FontSize ="50" TextColor="White" BackgroundColor="#58c0fc" Text="Update!" Clicked="updateFoodItem_Clicked"/>
    <ActivityIndicator Grid.Row="7" x:Name="ProgressIndicator" Color="Red" IsRunning="false" />
  </Grid>
</ContentPage>