<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Moodify.MenuPage">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<StackLayout Spacing="5" BackgroundColor="White">
      <Label TextColor="#58c0fc" FontSize = "60" Text="Menu" HorizontalTextAlignment="Center" />
      <Label x:Name="uName" TextColor="Pink" FontSize = "10" Text="{Binding name}" HorizontalTextAlignment="Center" />
			<Button Text="Log In" TextColor="White" BackgroundColor="#58c0fc" Command="{Binding GoHomeCommand}" />
			<Button Text="Emotion Menu" TextColor="White" BackgroundColor="#58c0fc" Command="{Binding GoEmotionCommand}" />
      <Button Text="Menu" TextColor="White" BackgroundColor="#58c0fc" Command="{Binding GoFoodMenuCommand}" />
      <Button Text="View Orders" TextColor="White" BackgroundColor="#58c0fc" Command="{Binding GoOrderCommand}" />
      <Button Text="Map" TextColor="White" BackgroundColor="#58c0fc" Command="{Binding GoMapCommand}" />
      <Button Text="Staff" TextColor="White" BackgroundColor="#58c0fc" Command="{Binding GoStaffCommand}" />
      <Button Text="About Us" TextColor="White" BackgroundColor="#58c0fc" Command="{Binding AboutUsCommand}" />
      <Image Source="icon.jpg" />
		</StackLayout>

	</ContentPage.Content>
</ContentPage>
