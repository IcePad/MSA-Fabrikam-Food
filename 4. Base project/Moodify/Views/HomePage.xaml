<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Moodify.HomePage">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout BackgroundColor="White">
        <Button Text="Take Picture" FontSize ="50" TextColor="White" BackgroundColor="#58c0fc" Clicked="TakePicture_Clicked" />
        <Image x:Name="image" VerticalOptions="Start" />
        <Button x:Name="accept_btn" Text="Accept Order" FontSize ="50" TextColor="White" BackgroundColor="#58c0fc" Clicked="Accept_Clicked" IsVisible="false" />
        <Label x:Name="errorLabel" />
        <ActivityIndicator x:Name="UploadingIndicator" Color="Red" IsRunning="false" Grid.Row="0" />
      </StackLayout>
      </ScrollView>
  </ContentPage.Content>
</ContentPage>
